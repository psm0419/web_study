<?xml version="1.0" encoding="UTF-8"?> 
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="room_mapper">
	
	<insert id="registerRoom" parameterType="Room">
		insert into T_ROOM values ( SEQ_T_ROOM_PK.nextval, 
									#{buildingNumber}, 
									#{roomNumber},
									#{floor},
									#{maxGuestCount},
									#{viewType}
									)
	</insert>
	
	<select id="findRoomList" resultType="Room">
		SELECT *
		FROM T_ROOM
		order by room_id
	</select>
	
	<select id="findByRoomId" resultType="Room" parameterType="int">
		SELECT *
		FROM T_ROOM
		WHERE room_id = #{roomId}
	</select>
	
	<delete id="removeRoom" parameterType="int">
		DELETE FROM T_ROOM
		WHERE room_id = #{roomId}
	</delete>
	
</mapper>